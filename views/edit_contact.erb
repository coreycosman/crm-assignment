<h1> Edit Contact </h1>
  <form action='/contacts/<%= @contact.id %>' method='post'>
    <input type='hidden' name='_method' value='put'>
    <label> First Name </label>
    <input type='text' name='first_name' value='<%= @contact.first_name %>'>
    <input type='text' name='first_name' value='<%= @contact.last_name %>'>
    <input type='text' name='first_name' value='<%= @contact.email %>'>
    <input type='text' name='first_name' value='<%= @contact.note %>'>
    <input type='submit' value='Edit Contact'>
  </form>
